<Window x:Class="LoraViewerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoraViewerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <!-- 顶部按钮和路径标签 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
            <Button Content="选择Lora文件夹" Width="150" Margin="0,0,10,0" Click="ChooseFolder_Click"/>
            <TextBlock x:Name="CurrentPathLabel" Text="当前路径：" FontSize="14" TextWrapping="Wrap"/>
        </StackPanel>
        <!-- 左侧列表 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <ListView x:Name="LoraListView" SelectionChanged="LoraListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" Width="120"/>
                        <GridViewColumn Header="预览图">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ImagePath}" Width="60" Height="60"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <!-- 详情区域 -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Button Content="复制名称" Width="120" Margin="0,10" Click="CopyName_Click"/>
                <TextBlock x:Name="DetailName" FontSize="24" FontWeight="Bold" />
                <Image x:Name="DetailImage" Width="400" Height="400" Margin="0,10"/>
                <ItemsControl x:Name="TriggerListControl" Margin="0,10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="{Binding}" FontSize="16" Width="300" TextWrapping="Wrap"/>
                                <Button Content="复制" Margin="10,0,0,0" Click="CopySingleTrigger_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
